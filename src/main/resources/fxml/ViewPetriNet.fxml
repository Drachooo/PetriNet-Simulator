<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="900.0" prefWidth="1440.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.controllers.ViewPetriNetController">

    <left>
        <VBox prefWidth="250.0" style="-fx-background-color: #F8F9FA; -fx-border-color: #E0E0E0; -fx-border-width: 0 1 0 0;" BorderPane.alignment="CENTER">
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
            </padding>
            <Label text="Computation View">
                <font>
                    <Font name="System Bold" size="18.0" />
                </font>
                <VBox.margin>
                    <Insets bottom="30.0" />
                </VBox.margin>
            </Label>
            <Region VBox.vgrow="ALWAYS" />
            <Button fx:id="backButton" mnemonicParsing="false" onAction="#handleGoBack" prefWidth="210.0" text="â† Back to Dashboard" />
        </VBox>
    </left>

    <center>
        <BorderPane prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">

            <top>
                <VBox style="-fx-border-color: #E0E0E0; -fx-border-width: 0 0 1 0;">
                    <children>

                        <HBox alignment="CENTER_LEFT" prefHeight="40.0" spacing="10.0" style="-fx-background-color: #FAFAFA;">
                            <padding> <Insets left="20.0" right="20.0" /> </padding>
                            <children>
                                <Label text="Viewing Net:">
                                    <font><Font name="System Bold" size="16.0" /></font>
                                </Label>
                                <Label fx:id="netNameLabel" text="[Net Name]">
                                    <font><Font size="16.0" /></font>
                                </Label>
                                <Region HBox.hgrow="ALWAYS" />
                                <Label text="Status:">
                                    <font><Font name="System Bold" size="16.0" /></font>
                                </Label>
                                <Label fx:id="statusLabel" text="ACTIVE" textFill="GREEN">
                                    <font><Font name="System Bold" size="16.0" /></font>
                                </Label>
                            </children>
                        </HBox>

                        <HBox alignment="CENTER_LEFT" prefHeight="30.0" style="-fx-background-color: #E6F7FF;">
                            <padding> <Insets left="20.0" right="20.0" /> </padding>
                            <children>
                                <Label fx:id="messageLabel" text="Click on highlighted transitions to fire them." textFill="#0056b3" />
                            </children>
                        </HBox>
                    </children>
                </VBox>
            </top>

            <center>
                <ScrollPane fx:id="scrollPane" fitToHeight="true" fitToWidth="true" pannable="true" style="-fx-background: white;" BorderPane.alignment="CENTER">
                    <content>
                        <Pane fx:id="drawingPane" prefHeight="2000.0" prefWidth="2000.0" style="-fx-background-color: white;" />
                    </content>
                </ScrollPane>
            </center>

        </BorderPane>
    </center>
</BorderPane>
