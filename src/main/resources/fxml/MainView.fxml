<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="900.0" prefWidth="1440.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.controllers.MainViewController">

    <left>
        <VBox prefWidth="250.0" style="-fx-background-color: #F8F9FA; -fx-border-color: #E0E0E0; -fx-border-width: 0 1 0 0;" BorderPane.alignment="CENTER">
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
            </padding>
            <Label text="Dashboard">
                <font>
                    <Font name="System Bold" size="18.0" />
                </font>
                <VBox.margin>
                    <Insets bottom="30.0" />
                </VBox.margin>
            </Label>
            <Region prefHeight="36.0" prefWidth="210.0" />


            <VBox prefWidth="210.0" spacing="10.0">
                <Button fx:id="exploreNetsButton" onAction="#goToExploreNets" prefWidth="200.0" text="Explore Nets" />
                <Button fx:id="adminAreaButton" onAction="#goToAdminArea" prefWidth="200.0" text="Admin Area" />
                <Button fx:id="helpButton" onAction="#goToHelp" prefWidth="200.0" text="Help" />
            </VBox>

            <Region VBox.vgrow="ALWAYS" />
            <Button fx:id="logoutButton" mnemonicParsing="false" onAction="#handleLogout" prefWidth="200.0" text="Logout" />
        </VBox>
    </left>


    <center>
        <VBox>
            <padding>
                <Insets bottom="20.0" left="30.0" right="30.0" top="20.0" />
            </padding>


            <HBox alignment="CENTER_LEFT" spacing="20.0">
                <Label fx:id="welcomeLabel" text="Welcome, loading...">
                    <font>
                        <Font name="System Bold" size="24.0" />
                    </font>
                </Label>
                <Region HBox.hgrow="ALWAYS" />
            </HBox>


            <HBox spacing="20.0">
                <VBox.margin> <Insets top="30.0" /> </VBox.margin>
                <VBox style="-fx-background-color: #FFFFFF; -fx-background-radius: 8; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2);" HBox.hgrow="ALWAYS">
                    <padding> <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" /> </padding>
                    <HBox alignment="CENTER_LEFT" spacing="15.0">
                        <Label style="-fx-font-size: 24px;" text="ðŸ”—" />
                        <VBox>
                            <Label text="Your Computations" />
                            <Label fx:id="yourComputationsCountLabel" text="0">
                                <font> <Font name="System Bold" size="32.0" /> </font>
                            </Label>
                        </VBox>
                    </HBox>
                </VBox>
                <VBox style="-fx-background-color: #FFFFFF; -fx-background-radius: 8; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2);" HBox.hgrow="ALWAYS">
                    <padding> <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" /> </padding>
                    <HBox alignment="CENTER_LEFT" spacing="15.0">
                        <Label style="-fx-font-size: 24px;" text="ðŸ“Š" />
                        <VBox>
                            <Label text="Total Available Nets" />
                            <Label fx:id="totalNetsCountLabel" text="0">
                                <font> <Font name="System Bold" size="32.0" /> </font>
                            </Label>
                        </VBox>
                    </HBox>
                </VBox>
                <VBox style="-fx-background-color: #FFFFFF; -fx-background-radius: 8; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2);" HBox.hgrow="ALWAYS">
                    <padding> <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" /> </padding>
                    <HBox alignment="CENTER_LEFT" spacing="15.0">
                        <Label style="-fx-font-size: 24px;" text="ðŸ‘¥" />
                        <VBox>
                            <Label text="Total Users" />
                            <Label fx:id="totalUsersCountLabel" text="0">
                                <font> <Font name="System Bold" size="32.0" /> </font>
                            </Label>
                        </VBox>
                    </HBox>
                </VBox>
            </HBox>

            <VBox spacing="15.0" VBox.vgrow="ALWAYS">
                <VBox.margin>
                    <Insets top="40.0" />
                </VBox.margin>

                <HBox alignment="CENTER_LEFT" spacing="10.0">
                    <Label fx:id="tableTitleLabel" text="My Computations">
                        <font> <Font name="System Bold" size="18.0" /> </font>
                    </Label>
                    <Region HBox.hgrow="ALWAYS" />
                    <TextField fx:id="searchTextField" promptText="Search..." />
                    <Button fx:id="viewButton" onAction="#handleView" text="View Computation" />
                    <Button fx:id="startButton" onAction="#handleStart" text="Start New Computation" />
                    <Button fx:id="deleteButton" onAction="#handleDelete" text="Delete" textFill="RED" />
                </HBox>

                <TableView fx:id="mainTableView" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="column1" prefWidth="300.0" text="Name" />
                        <TableColumn fx:id="column2" prefWidth="300.0" text="Details" />
                        <TableColumn fx:id="column3" prefWidth="250.0" text="Date" />
                        <TableColumn fx:id="column4" prefWidth="150.0" text="Status / ID" />
                    </columns>
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                    </columnResizePolicy>
                </TableView>

                <Label fx:id="errorLabel" textFill="RED">
                    <font><Font name="System Bold" size="12.0" /></font>
                </Label>
            </VBox>
        </VBox>
    </center>
</BorderPane>
