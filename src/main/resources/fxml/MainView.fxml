<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.GaussianBlur?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<StackPane fx:id="rootStackPane" prefHeight="824.0" prefWidth="1332.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.controllers.MainViewController">

    <stylesheets>
        <URL value="@../css/global.css" />
        <URL value="@../css/mainView.css" />
    </stylesheets>

    <children>
        <ImageView fx:id="backgroundImage" fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true">
            <effect>
                <GaussianBlur />
            </effect>
            <image>
                <Image url="@../images/sfondoBase.jpg" />
            </image>
        </ImageView>

        <Region style="-fx-background-color: rgba(0, 0, 0, 0.7);" />

        <BorderPane>
            <left>
                <VBox prefWidth="250.0" styleClass="sidebar" BorderPane.alignment="CENTER">
                    <children>
                        <Label styleClass="sidebar-title" text="PetriNet App" />
                        <Label styleClass="sidebar-header" text="MAIN MENU">
                            <VBox.margin><Insets bottom="10.0" /></VBox.margin>
                        </Label>

                        <VBox spacing="5.0">
                            <children>
                                <Button fx:id="exploreNetsButton" mnemonicParsing="false" onAction="#goToExploreNets" prefHeight="45.0" prefWidth="210.0" styleClass="nav-button" text="Explore Nets" />
                                <Button fx:id="adminAreaButton" mnemonicParsing="false" onAction="#goToAdminArea" prefHeight="45.0" prefWidth="210.0" styleClass="nav-button" text="Admin Area" />
                                <Button fx:id="editProfileButton" mnemonicParsing="false" onAction="#handleEditProfile" prefHeight="45.0" prefWidth="210.0" styleClass="nav-button" text="Edit Profile" />
                                <Button fx:id="helpButton" mnemonicParsing="false" onAction="#goToHelp" prefHeight="45.0" prefWidth="210.0" styleClass="nav-button" text="Help" />
                            </children>
                        </VBox>

                        <Region VBox.vgrow="ALWAYS" />

                        <Button fx:id="logout" mnemonicParsing="false" onAction="#handleLogout" prefHeight="40.0" prefWidth="210.0" styleClass="btn-logout" text="Logout" />
                    </children>
                    <padding><Insets bottom="20.0" left="20.0" right="20.0" top="30.0" /></padding>
                </VBox>
            </left>

            <center>
                <VBox>
                    <padding><Insets bottom="30.0" left="40.0" right="40.0" top="30.0" /></padding>
                    <children>
                        <VBox>
                            <children>
                                <Label fx:id="welcomeLabel" style="-fx-font-size: 30px;" styleClass="label-title-large" text="Welcome back!" />
                                <Label style="-fx-text-fill: #aaaaaa; -fx-font-size: 16px;" text="Here is what's happening with your net" />
                            </children>
                        </VBox>

                        <HBox spacing="25.0">
                            <VBox.margin><Insets top="40.0" /></VBox.margin>
                            <children>
                                <VBox styleClass="stat-card" HBox.hgrow="ALWAYS">
                                    <padding><Insets bottom="25.0" left="25.0" right="25.0" top="25.0" /></padding>
                                    <children>
                                        <Label styleClass="stat-label" text="YOUR COMPUTATIONS" />
                                        <HBox alignment="CENTER_LEFT" spacing="10.0">
                                            <children>
                                                <Label fx:id="yourComputationsCountLabel" styleClass="stat-value" text="0" />
                                                <Label style="-fx-text-fill: -fx-color-success; -fx-font-weight: bold;" text="Active" />
                                            </children>
                                        </HBox>
                                    </children>
                                </VBox>

                                <VBox styleClass="stat-card" HBox.hgrow="ALWAYS">
                                    <padding><Insets bottom="25.0" left="25.0" right="25.0" top="25.0" /></padding>
                                    <children>
                                        <Label styleClass="stat-label" text="AVAILABLE NETS" />
                                        <HBox alignment="CENTER_LEFT" spacing="10.0">
                                            <children>
                                                <Label fx:id="totalNetsCountLabel" styleClass="stat-value" text="0" />
                                                <Label style="-fx-text-fill: -fx-color-primary; -fx-font-weight: bold;" text="Global" />
                                            </children>
                                        </HBox>
                                    </children>
                                </VBox>

                                <VBox styleClass="stat-card" HBox.hgrow="ALWAYS">
                                    <padding><Insets bottom="25.0" left="25.0" right="25.0" top="25.0" /></padding>
                                    <children>
                                        <Label styleClass="stat-label" text="TOTAL USERS" />
                                        <HBox alignment="CENTER_LEFT" spacing="10.0">
                                            <children>
                                                <Label fx:id="totalUsersCountLabel" styleClass="stat-value" text="0" />
                                                <Label style="-fx-text-fill: #ffcc00; -fx-font-weight: bold;" text="Registered" />
                                            </children>
                                        </HBox>
                                    </children>
                                </VBox>
                            </children>
                        </HBox>

                        <VBox spacing="15.0" VBox.vgrow="ALWAYS">
                            <VBox.margin><Insets top="40.0" /></VBox.margin>
                            <children>
                                <HBox alignment="CENTER_LEFT" spacing="15.0">
                                    <children>
                                        <Label fx:id="tableTitleLabel" style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: white;" text="My Computations List" />
                                        <Region HBox.hgrow="ALWAYS" />
                                        <ComboBox fx:id="searchTypeComboBox" prefHeight="35.0" prefWidth="125.0" promptText="Filter by..." styleClass="round-control" />
                                        <TextField fx:id="searchTextField" prefHeight="35.0" prefWidth="250.0" promptText="Search computation..." styleClass="round-control" />
                                        <Button fx:id="viewButton" onAction="#handleView" prefHeight="35.0" style="-fx-background-color: -fx-color-primary;" styleClass="action-button" text="View Details" />
                                        <Button fx:id="deleteButton" onAction="#handleDelete" prefHeight="35.0" style="-fx-background-color: -fx-color-danger;" styleClass="action-button" text="Delete" />
                                    </children>
                                </HBox>

                                <TableView fx:id="mainTableView" VBox.vgrow="ALWAYS">
                                    <columns>
                                        <TableColumn fx:id="column1" prefWidth="300.0" text="NET NAME" />
                                        <TableColumn fx:id="column2" prefWidth="150.0" text="CREATOR" />
                                        <TableColumn fx:id="column3" prefWidth="250.0" text="DATE STARTED" />
                                        <TableColumn fx:id="column4" prefWidth="150.0" text="STATUS" />
                                    </columns>
                                    <columnResizePolicy>
                                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                                    </columnResizePolicy>
                                </TableView>
                                <Label fx:id="errorLabel" styleClass="label-error-pill" visible="false" />
                            </children>
                        </VBox>
                    </children>
                </VBox>
            </center>
        </BorderPane>
    </children>
</StackPane>
