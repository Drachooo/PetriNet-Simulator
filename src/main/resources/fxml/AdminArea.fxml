<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.effect.GaussianBlur?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<StackPane fx:id="rootStackPane" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.controllers.AdminAreaController">
    <children>

        <ImageView fx:id="backgroundImage" pickOnBounds="true">
            <effect>
                <GaussianBlur radius="10.0" />
            </effect>
            <image>
                <Image url="@../images/sfondoBase.jpg" />
            </image>
        </ImageView>

        <Region style="-fx-background-color: rgba(0, 0, 0, 0.7);" />

        <BorderPane>
            <padding>
                <Insets bottom="40.0" left="40.0" right="40.0" top="40.0" />
            </padding>

            <top>
                <HBox alignment="CENTER_LEFT" spacing="20.0" BorderPane.alignment="CENTER">
                    <children>
                        <Button fx:id="backButton" mnemonicParsing="false" onAction="#handleGoBack" style="-fx-background-color: rgba(255,255,255,0.1); -fx-text-fill: white; -fx-background-radius: 30; -fx-cursor: hand; -fx-border-color: rgba(255,255,255,0.2); -fx-border-radius: 30;" text="â† Back to Dashboard">
                            <font>
                                <Font name="System Bold" size="14.0" />
                            </font>
                            <padding>
                                <Insets bottom="8.0" left="20.0" right="20.0" top="8.0" />
                            </padding>
                        </Button>

                        <Region HBox.hgrow="ALWAYS" />

                        <Label text="Admin Area" textFill="WHITE">
                            <font>
                                <Font name="System Bold" size="28.0" />
                            </font>
                        </Label>
                    </children>
                    <padding>
                        <Insets bottom="30.0" />
                    </padding>
                </HBox>
            </top>

            <center>
                <HBox spacing="30.0">
                    <children>

                        <VBox spacing="15.0" style="-fx-background-color: rgba(30, 30, 30, 0.6); -fx-background-radius: 20; -fx-border-color: rgba(255,255,255,0.1); -fx-border-radius: 20;" HBox.hgrow="ALWAYS">
                            <padding>
                                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                            </padding>
                            <children>
                                <Label text="My Created Nets" textFill="#aaaaaa">
                                    <font>
                                        <Font name="System Bold" size="18.0" />
                                    </font>
                                </Label>

                                <ListView fx:id="myNetsListView" style="-fx-background-color: transparent; -fx-control-inner-background: #2b2b2b; -fx-control-inner-background-alt: #333333; -fx-text-fill: white;" VBox.vgrow="ALWAYS" />

                                <HBox spacing="10.0">
                                    <children>
                                        <Button fx:id="createNewNetButton" mnemonicParsing="false" onAction="#handleCreateNewNet" style="-fx-background-color: #45a45f; -fx-text-fill: white; -fx-background-radius: 20; -fx-cursor: hand;" text="Create New Net" />
                                        <Button fx:id="editNetButton" mnemonicParsing="false" onAction="#handleEditNet" style="-fx-background-color: #4da6ff; -fx-text-fill: white; -fx-background-radius: 20; -fx-cursor: hand;" text="Edit Selected" />
                                        <Region HBox.hgrow="ALWAYS" />
                                        <Button fx:id="deleteNetButton" mnemonicParsing="false" onAction="#handleDeleteNet" style="-fx-background-color: rgba(196, 30, 58, 0.8); -fx-text-fill: white; -fx-background-radius: 20; -fx-cursor: hand;" text="Delete" />
                                    </children>
                                </HBox>
                            </children>
                        </VBox>

                        <VBox spacing="15.0" style="-fx-background-color: rgba(30, 30, 30, 0.6); -fx-background-radius: 20; -fx-border-color: rgba(255,255,255,0.1); -fx-border-radius: 20;" HBox.hgrow="ALWAYS">
                            <padding>
                                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                            </padding>
                            <children>
                                <Label text="Computations on My Nets" textFill="#aaaaaa">
                                    <font>
                                        <Font name="System Bold" size="18.0" />
                                    </font>
                                </Label>

                                <ListView fx:id="computationsListView" style="-fx-background-color: transparent; -fx-control-inner-background: #2b2b2b; -fx-control-inner-background-alt: #333333; -fx-text-fill: white;" VBox.vgrow="ALWAYS" />

                                <HBox spacing="10.0">
                                    <children>
                                        <Button fx:id="viewComputationButton" mnemonicParsing="false" onAction="#handleViewComputation" style="-fx-background-color: #4da6ff; -fx-text-fill: white; -fx-background-radius: 20; -fx-cursor: hand;" text="View Details" />
                                        <Region HBox.hgrow="ALWAYS" />
                                        <Button fx:id="deleteComputationButton" mnemonicParsing="false" onAction="#handleDeleteComputation" style="-fx-background-color: rgba(196, 30, 58, 0.8); -fx-text-fill: white; -fx-background-radius: 20; -fx-cursor: hand;" text="Delete Selected" />
                                    </children>
                                </HBox>
                            </children>
                        </VBox>

                    </children>
                </HBox>
            </center>

            <bottom>
                <Label fx:id="errorLabel" text="Error Message" textFill="#ff6b6b" visible="false" BorderPane.alignment="CENTER_LEFT">
                    <font>
                        <Font name="System Bold" size="14.0" />
                    </font>
                    <padding>
                        <Insets top="15.0" />
                    </padding>
                </Label>
            </bottom>

        </BorderPane>
    </children>
</StackPane>
