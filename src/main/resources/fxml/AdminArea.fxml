<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.effect.GaussianBlur?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<StackPane fx:id="rootStackPane" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.controllers.AdminAreaController">

    <stylesheets>
        <URL value="@../css/global.css" />
        <URL value="@../css/adminArea.css" />
    </stylesheets>

    <children>
        <ImageView fx:id="backgroundImage" pickOnBounds="true">
            <effect>
                <GaussianBlur radius="10.0" />
            </effect>
            <image>
                <Image url="@../images/sfondoBase.jpg" />
            </image>
        </ImageView>

        <Region styleClass="overlay-region" />

        <BorderPane>
            <padding>
                <Insets bottom="40.0" left="40.0" right="40.0" top="40.0" />
            </padding>

            <top>
                <HBox alignment="CENTER_LEFT" spacing="20.0" BorderPane.alignment="CENTER">
                    <children>
                        <Button fx:id="backButton" mnemonicParsing="false" onAction="#handleGoBack" styleClass="back-button" text="â† Back to Dashboard">
                            <padding>
                                <Insets bottom="8.0" left="20.0" right="20.0" top="8.0" />
                            </padding>
                        </Button>

                        <Region HBox.hgrow="ALWAYS" />

                        <Label styleClass="header-label" text="Admin Area" />
                    </children>
                    <padding>
                        <Insets bottom="30.0" />
                    </padding>
                </HBox>
            </top>

            <center>
                <HBox spacing="30.0">
                    <children>
                        <VBox spacing="15.0" styleClass="admin-pane-container" HBox.hgrow="ALWAYS">
                            <padding>
                                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                            </padding>
                            <children>
                                <Label styleClass="section-label" text="My Created Nets" />

                                <ListView fx:id="myNetsListView" styleClass="admin-list-view" VBox.vgrow="ALWAYS" />

                                <HBox spacing="10.0">
                                    <children>
                                        <Button fx:id="createNewNetButton" onAction="#handleCreateNewNet" styleClass="btn-create" text="Create New Net" />
                                        <Button fx:id="editNetButton" onAction="#handleEditNet" styleClass="btn-edit" text="Edit Selected" />
                                        <Region HBox.hgrow="ALWAYS" />
                                        <Button fx:id="deleteNetButton" onAction="#handleDeleteNet" styleClass="btn-delete" text="Delete" />
                                    </children>
                                </HBox>
                            </children>
                        </VBox>

                        <VBox spacing="15.0" styleClass="admin-pane-container" HBox.hgrow="ALWAYS">
                            <padding>
                                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                            </padding>
                            <children>
                                <Label styleClass="section-label" text="Computations on My Nets" />

                                <ListView fx:id="computationsListView" styleClass="admin-list-view" VBox.vgrow="ALWAYS" />

                                <HBox spacing="10.0">
                                    <children>
                                        <Button fx:id="viewComputationButton" onAction="#handleViewComputation" styleClass="btn-edit" text="View Details" />
                                        <Region HBox.hgrow="ALWAYS" />
                                        <Button fx:id="deleteComputationButton" onAction="#handleDeleteComputation" styleClass="btn-delete" text="Delete Selected" />
                                    </children>
                                </HBox>
                            </children>
                        </VBox>
                    </children>
                </HBox>
            </center>

            <bottom>
                <Label fx:id="errorLabel" styleClass="label-error-simple" text="Error Message" visible="false" BorderPane.alignment="CENTER_LEFT">
                    <padding>
                        <Insets top="15.0" />
                    </padding>
                </Label>
            </bottom>
        </BorderPane>
    </children>
</StackPane>