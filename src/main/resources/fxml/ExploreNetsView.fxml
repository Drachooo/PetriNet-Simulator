<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.effect.GaussianBlur?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<StackPane fx:id="rootStackPane" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.controllers.ExploreNetsController">

    <stylesheets>
        <URL value="@../css/global.css" />
        <URL value="@../css/exploreNets.css" />
    </stylesheets>

    <children>

        <ImageView fx:id="backgroundImage" pickOnBounds="true"> <effect>
            <GaussianBlur radius="10.0" />
        </effect>
            <image>
                <Image url="@../images/sfondoBase.jpg" />
            </image>
        </ImageView>

        <Region style="-fx-background-color: rgba(0, 0, 0, 0.7);" />

        <BorderPane>
            <padding>
                <Insets bottom="40.0" left="40.0" right="40.0" top="40.0" />
            </padding>

            <top>
                <HBox alignment="CENTER_LEFT" spacing="20.0" BorderPane.alignment="CENTER">
                    <children>
                        <Button fx:id="backButton" mnemonicParsing="false" onAction="#handleGoBack" styleClass="back-button" text="â† Back to Dashboard">
                            <font>
                                <Font name="System Bold" size="14.0" />
                            </font>
                            <padding>
                                <Insets bottom="8.0" left="20.0" right="20.0" top="8.0" />
                            </padding>
                        </Button>

                        <Region HBox.hgrow="ALWAYS" />
                        <Label styleClass="header-label" text="Explore Available Nets" textFill="WHITE" />
                    </children>
                    <padding>
                        <Insets bottom="30.0" />
                    </padding>
                </HBox>
            </top>

            <center>
                <VBox spacing="20.0" styleClass="explore-pane-container">
                    <padding>
                        <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
                    </padding>
                    <children>

                        <Label styleClass="instruction-label" text="Select a net to start a new computation:" />

                        <ListView fx:id="availableNetsListView" styleClass="explore-list-view" VBox.vgrow="ALWAYS" />

                        <HBox alignment="CENTER_RIGHT">
                            <children>
                                <Button fx:id="startComputationButton" mnemonicParsing="false" onAction="#handleStartComputation" prefHeight="45.0" minHeight="45.0" styleClass="btn-start-computation" text="Start New Computation">
                                    <font>
                                        <Font name="System Bold" size="16.0" />
                                    </font>
                                    <padding>
                                        <Insets left="30.0" right="30.0" />
                                    </padding>
                                </Button>
                            </children>
                        </HBox>
                    </children>
                </VBox>
            </center>

            <bottom>
                <Label fx:id="errorLabel" styleClass="label-error-pill" text="Error Message" visible="false" BorderPane.alignment="CENTER_LEFT">
                    <font>
                        <Font name="System Bold" size="14.0" />
                    </font>
                    <padding>
                        <Insets top="15.0" />
                    </padding>
                </Label>
            </bottom>

        </BorderPane>
    </children>
</StackPane>